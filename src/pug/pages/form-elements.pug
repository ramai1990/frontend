extends ../layout/main-ulkit
include ../../pug/utils/mixins

block variables
  - const title = 'Form Elements';
  - const pageClass = '';
  - const user1 = require('../../assets/user1.json');
  - const user2 = require('../../assets/user2.json');
  - const listCheckbox = require('../../components/list-checkbox/list-checkbox.json');
  - const richCheckbox = require('../../components/rich-checkbox/rich-checkbox.json');
  - const guest = require('../../components/guest-dropdown/guest.json');

block content
  section.form-elements
    .form-elements__container
      .form-elements__inner
        +textField
        +checkboxElements
        +rangeElements
      .form-elements__bottom
        .item
          .form-elements__dropdown
            span Default
            +dropdown('dropdown', 24)
          .form-elements__dropdown
            span expanded
            +dropdown('dropdown', 167)(class="dropdown__list_active")
          .form-elements__list-checkbox
            +list-checkbox('expandable checkbox list', listCheckbox)
          .form-elements__list-checkbox
            +list-checkbox('expandable checkbox list', listCheckbox, 'list-checkbox__list_active')(class="list-checkbox__title_active")
        .item
          .form-elements__dropdown-guest
            +guest({
              title: 'dropdown',
              list: [
                {
                  "title": "взрослые",
                  "list": ["взрослый", "взрослых", "взрослых"],
                  "value": "0"
                },
                {
                  "title": "дети",
                  "list": ["ребенок", "ребенка", "детей"],
                  "value": "0"
                },
                {
                  "title": "младенцы",
                  "list": ["младенец", "младенца", "младенцев"],
                  "class": "guest__counter_baby",
                  "value": "0"
                }
              ],
              marginBottom: 19
            })(class="dropdown__list_active")
          .form-elements__rich-checkbox
            +richCheckbox('rich Checkbox Buttons', richCheckbox)
        .item
          .form-elements__dropdown-guest
              +guest({
                title: 'dropdown',
                list: [
                  {
                    "title": "взрослые",
                    "list": ["взрослый", "взрослых", "взрослых"],
                    "value": "2"
                  },
                  {
                    "title": "дети",
                    "list": ["ребенок", "ребенка", "детей"],
                    "value": "1"
                  },
                  {
                    "title": "младенцы",
                    "list": ["младенец", "младенца", "младенцев"],
                    "class": "guest__counter_baby",
                    "value": "0"
                  }
                ],
                marginBottom: 20,
                value: '3 гостя'
              })(class="dropdown__list_active")
          .form-elements__bullet-list
            +bullet(
              'bullet list',
              'elements-title bullet__title',
              [
              'Нельзя с питомцами',
              'Без вечеринок и мероприятий',
              'Время прибытия — после 13:00, а выезд до 12:00'
            ])
      .form-elements__footer
        .form-elements__advantages
            +advantages([
              {
                "modifier": "comfort",
                "text": "Шумопоглощающие стены",
                "title": "Комфорт"
              },
              {
                "modifier": "convenience",
                "text": "Окно в каждой из спален",
                "title": "Удобство"
              },
            ])
        .form-elements__comment
          +comment([user1])