extends ../layout/main-ulkit
include ../../pug/utils/mixins

block variables
  - const title = 'Form Elements';
  - const pageClass = '';

block content
  section.form-elements
    .container.form-elements__container
      .form-elements__inner
        include ../../components/text-field/text-field
        include ../../components/checkbox/checkbox
        include ../../components/range/range
      .form-elements__inner
        .item
          +dropdown('удобства номера')
          include ../../components/list-checkbox/list-checkbox
        .item
          include ../../components/rich-checkbox/rich-checkbox
        .item
          +bullet(
            'bullet list',
            'elements-title bullet__title',
            [
            'Нельзя с питомцами',
            'Без вечеринок и мероприятий',
            'Время прибытия — после 13:00, а выезд до 12:00'
          ])
      .form-elements__inner
        .item
          +advantages([
            {
              modifier: 'comfort',
              text: 'Шумопоглощающие стены',
              title: 'Комфорт'
            },
            {
              modifier: 'convenience',
              text: 'Окно в каждой из спален',
              title: 'Удобство'
            },
            {
              modifier: 'cosiness',
              text: 'Номер оснащён камином',
              title: 'Уют'
            }
          ])
      +comment([
        {
          avatar: 'author.png',
          author: 'Мурад Сарафанов',
          date: '5 дней назад',
          text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
          counter: '12'
        }
      ])
      +comment([
        {
          avatar: 'author-2.png',
          author: 'Патрисия Стёклышкова',
          date: 'Неделю назад',
          text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент',
          counter: '2'
        }
      ])