extends ../layout/main
include ../../pug/utils/mixins

block variables
  - const title = 'Room';
  - const pageClass = '';
  - const user1 = require('../../assets/user1.json');
  - const user2 = require('../../assets/user2.json');

block content
  section.room
    .room-intro
      .room-intro__item
      .room-intro__item
      .room-intro__item
    .container.room__container
      .room__grid
        .room__price
          +roomPrice
        .room__content
          .room__content_inner
            .room__content-item
              .room__title Сведения о номере
              +advantages([
                {
                  modifier: 'comfort',
                  text: 'Шумопоглощающие стены',
                  title: 'Комфорт'
                },
                {
                  modifier: 'convenience',
                  text: 'Окно в каждой из спален',
                  title: 'Удобство'
                },
                {
                  modifier: 'cosiness',
                  text: 'Номер оснащён камином',
                  title: 'Уют'
                }
              ])
            .room__content-item
              .room__title Впечатления от номера
              +statistics({
                number: 260,
                text: 'голосов'
              })
          .room__comments
            .room__title Отзывы посетителей номера
              span 2 отзыва
            +comment([
              {
                avatar: user1.avatar,
                author: user1.author,
                date: user1.date,
                text: user1.text,
                counter: user1.counter
              }
            ])
            +comment([
              {
                avatar: user2.avatar,
                author: user2.author,
                date: user2.date,
                text: user2.text,
                counter: user2.counter
              }
            ])
          .room__rules
            .room__rules-item
              +bullet(
                'Правила',
                'room__title room__title_rules-left',
                [
                'Нельзя с питомцами',
                'Без вечеринок и мероприятий',
                'Время прибытия — после 13:00, а выезд до 12:00'
              ])
            .room__rules-item
              .room__title.room__title_rules Отмена
              .room__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.