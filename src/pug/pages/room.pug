extends ../layout/main

block variables
	- var title = 'Room';
	- var pageClass = '';

block content
	section.room
		.room-intro
			.room-intro__item
			.room-intro__item
			.room-intro__item
		.container.room__container
			.room__grid
				.room__price
					include ../modules/room-price.pug
				.room__content
					.room__content--inner
						.room__content-item
							.room__title Сведения о номере
							.advanteges
								.advanteges__item.advanteges__item--comfort
									h3.advanteges__title Комфорт
									p.advanteges__descr Шумопоглощающие стены
								.advanteges__item.advanteges__item--convenience
									h3.advanteges__title Удобство
									p.advanteges__descr Окно в каждой из спален
								.advanteges__item.advanteges__item--cosiness
									h3.advanteges__title Уют
									p.advanteges__descr Номер оснащён камином
						.room__content-item
							.room__title Впечатления от номера
							.room__statistics
								p 260 <br>
									span голосов
								#great.room__statistic
								#well.room__statistic
								#satisfactory.room__statistic
								#disappointed.room__statistic
							.room__stats
								ul.room__stats-list
									li.room__stats-item(data-name='Great') Великолепно
									li.room__stats-item(data-name='Well') Хорошо
									li.room__stats-item(data-name='Satisfactory') Удовлетворительно
									li.room__stats-item(data-name='Disappointed') Разочарован
					.room__comments
						.room__title Отзывы посетителей номера
							span 2 отзыва
						include ../modules/comment.pug
					.room__rules
						.room__rules-item
							.room__title.room__title--rules-left Правила
							.bullet
								p.bullet__text Нельзя с питомцами
								p.bullet__text Без вечеринок и мероприятий
								p.bullet__text Время прибытия — после 13:00, а выезд до 12:00
						.room__rules-item
							.room__title.room__title--rules Отмена
							.room__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.