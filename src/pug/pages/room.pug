extends ../layout/main
include ../../pug/utils/mixins

block variables
  - const title = 'Room';
  - const pageClass = '';

block content
  section.room
    .room-intro
      .room-intro__item
      .room-intro__item
      .room-intro__item
    .container.room__container
      .room__grid
        .room__price
          include ../../components/room-price/room-price
        .room__content
          .room__content_inner
            .room__content-item
              .room__title Сведения о номере
              +advantages([
                {
                  modifier: 'comfort',
                  text: 'Шумопоглощающие стены',
                  title: 'Комфорт'
                },
                {
                  modifier: 'convenience',
                  text: 'Окно в каждой из спален',
                  title: 'Удобство'
                },
                {
                  modifier: 'cosiness',
                  text: 'Номер оснащён камином',
                  title: 'Уют'
                }
              ])
            .room__content-item
              .room__title Впечатления от номера
              .room__statistics
                p 260 <br>
                  span голосов
                #great.room__statistic
                #well.room__statistic
                #satisfactory.room__statistic
                #disappointed.room__statistic
              .room__stats
                ul.room__stats-list
                  li.room__stats-item(data-name='Great') Великолепно
                  li.room__stats-item(data-name='Well') Хорошо
                  li.room__stats-item(data-name='Satisfactory') Удовлетворительно
                  li.room__stats-item(data-name='Disappointed') Разочарован
          .room__comments
            .room__title Отзывы посетителей номера
              span 2 отзыва
            +comment([
              {
                avatar: 'author.png',
                author: 'Мурад Сарафанов',
                date: '5 дней назад',
                text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
                counter: '12'
              }
            ])
            +comment([
              {
                avatar: 'author-2.png',
                author: 'Патрисия Стёклышкова',
                date: 'Неделю назад',
                text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент',
                counter: '2'
              }
            ])
          .room__rules
            .room__rules-item
              +bullet(
                'Правила',
                'room__title room__title_rules-left',
                [
                'Нельзя с питомцами',
                'Без вечеринок и мероприятий',
                'Время прибытия — после 13:00, а выезд до 12:00'
              ])
            .room__rules-item
              .room__title.room__title_rules Отмена
              .room__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.