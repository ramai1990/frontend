extends ../../layout/main-ulkit
include ../../utils/mixins

block variables
  - const title = 'Colors & Type';
  - const colors = require('../../../components/colors/defaults.json');
  - const textList = require('../../../components/text/defaults.json');

block content
  section.colors-type
    .colors-type__container
      .colors-type__inner
        .colors-type__item
          each color in colors
            +colors(color)
        .colors-type__item
          each text in textList
            +text(text)