extends ../layout/main
include ../../pug/utils/mixins

block variables
  - const title = 'Search Room';
  - const pageClass = '';
  - const listCheckbox = require('../../components/list-checkbox/list-checkbox.json');
  - const pagination = require('../../components/pagination/pagination.json');
  - const guest = require('../../components/guest-dropdown/guest.json');
  - const cards = require('../../components/cards/cards.json');
  - const checkbox = require('../../components/checkbox/checkbox.json');
  - const richCheckbox = require('../../components/rich-checkbox/rich-checkbox.json');

block content
  section.search-room
    .search-room__container
      .search-room__grid
        .search-room__filter
          +air-datepicker({
            title: 'даты пребывания в отеле',
            type: 'range'
          })
          +guest({
            title: 'гости',
            list: guest
          })
          .search-room__range
            +rangeSlider([
              {
                title: 'диапазон цены',
                span: 'Стоимость за сутки пребывания в номере'
              }
            ])
          .search-room__checkbox
            +checkbox('правила дома', checkbox)
          +richCheckbox('доступность', richCheckbox)
          +dropdown('удобства номера')
          +list-checkbox('дополнительные удобства', listCheckbox)
        .search-room__cards
          h3.search-room__title Номера, которые мы для вас подобрали
          +card(cards)
          .search-room__pagination
            +pagination({
              text: '1 – 12 из 100+ вариантов аренды',
              list: pagination
            })