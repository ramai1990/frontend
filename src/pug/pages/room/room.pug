extends ../../layout/main
include ../../utils/mixins

block variables
  - const title = 'Room';
  - const pageClass = '';
  - const user1 = require('../../../assets/user1.json');
  - const user2 = require('../../../assets/user2.json');
  - const advantages = require('../../../components/advantages/advantages.json');
  - const guest = require('../../../components/guest/guest.json');
  - const footer = require('../../../components/footer/footer.json');
  - const navigation = require('../../../components/nav/nav.json');

block content
  +header({navigation, status: 'non-authorized'})
  .main
    section.room
      +room-intro
      .room__container
        .room__grid
          .room__price
            +roomPrice(guest)
          .room__content
            .room__content-inner
              .room__content-item
                .room__advantages
                  h2.room__title.room__title_mb-19 Сведения о номере
                  each advantage in advantages
                    +advantages(advantage)
              .room__content-item
                h2.room__title.room__title_ml-10.room__title_mb-18 Впечатления от номера
                +statistics
            h2.room__title Отзывы посетителей номера
              span.room__feedback 2 отзыва
            .room__comments
              +comment([user1])
              +comment([user2])
            .room__rules
              .room__rules-item
                h2.room__title.room__title_ml-20 Правила
                +bullet-list([
                  'Нельзя с питомцами',
                  'Без вечеринок и мероприятий',
                  'Время прибытия — после 13:00, а выезд до 12:00'
                ])
              .room__rules-item
                h2.room__title Отмена
                .room__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
  +footer(footer)