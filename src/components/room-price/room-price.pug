mixin roomPrice
  - const guest = require('../../components/guest-dropdown/guest.json');
  .room-price
    .room-price__title
      .price-title
        h3.price-title__left
          span №
          | 888
          span люкс
        p.price-title__right 9 990₽
          span в сутки
    .room-price__date
      .dropdown-date.search-rooms__date
        .search-rooms__dropdown
          p.search-rooms__text прибытие
          input.dropdown-date__range.dropdown-date__range_from.search-rooms__input(type="text" placeholder="19.08.2019" readonly)
        .search-rooms__dropdown
          p.search-rooms__text выезд
          input.dropdown-date__range.dropdown-date__range_to.search-rooms__input(type="text" placeholder="23.08.2019" readonly)
    +guest({
      title: 'гости',
      list: guest
    })
    .room-price__amount
      input.room-price__input(type="text" value='9 990₽ х 4 суток' disabled)
      input.room-price__input(type="text" value='39 960₽' disabled)
    .room-price__services
      p.room-price__text Сбор за услуги: скидка 2 179₽
      span i
      input.room-price__input(type="text" value='0₽' disabled)
    .room-price__additional
      p.room-price__text Сбор за дополнительные услуги
      span i
      input.room-price__input(type="text" value='300₽' disabled)
    .room-price__total
      h3 Итого
      input.room-price__input(type="text" value='38 081₽' disabled)
    +btn({
      theme: 'arrow',
      buttonClass: 'room-price__btn',
      text: 'забронировать'
    })