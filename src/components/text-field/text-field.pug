mixin textField
  - const guest = require('../../components/guest-dropdown/guest.json');
  .form-elements__textfield
    .form-elements__default
      p.form-elements__text Text Field
        span Default
      input(type="email" placeholder="Email").form-elements__input
    .form-elements__default_focus
      p.form-elements__text Text Field
        span Hover / Focus
      input(type="email" placeholder="This is pretty awesome").form-elements__input
    +guest({
      title: 'dropdown',
      list: guest,
      marginBottom: 19
    })
    .form-elements__date
      p.form-elements__text masked text field
      +imaskBirthday
    .form-elements__datedropdown
      +air-datepicker({
        title: 'date dropdown',
        type: 'from',
        placeholder: 'ДД.ММ.ГГГГ'
      })
      +air-datepicker({
        title: 'date dropdown',
        type: 'to',
        placeholder: '19.08.2019'
      })
    .form-elements__filter-date
      +air-datepicker({
        title: 'filter date dropdown',
        type: 'range'
      })
    .form-elements__email
      p.form-elements__text subscription text field
      input(type="email" placeholder="Email").form-elements__input
      button(type="submit")
        include ../../img/arrow-forward.svg