mixin radio(items)
  each item in items
    - const { id, checked, gender} = item;
    if checked
      input.radio__input(type="radio" id=`radio-${id}` name="gender" checked)
      label.radio__label(for=`radio-${id}`)= gender
    else
      input.radio__input(type="radio" id=`radio-${id}` name="gender")
      label.radio__label(for=`radio-${id}`)= gender