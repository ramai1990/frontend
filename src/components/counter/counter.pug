mixin counter({ value, list })
  .counter
    button(type='button' data-direction='minus').counter__btn.js-counter-btn
      include ../../img/remove.svg
    input(type='number' value=`${value}` data-value=`${list}` readonly).counter__value.js-counter-value
    button(type='button' data-direction='plus').counter__btn.js-counter-btn
      include ../../img/plus.svg