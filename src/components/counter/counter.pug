mixin dropdownCounter(items)
  each item in items
    - const {subtitle, list, value } = item;
    li.dropdown__list-item= subtitle
      .counter
        button(type="button" data-direction="minus").counter__btn
          include ../../img/remove.svg
        input(type="number" value=`${value}` data-value=`${list}`).counter__value
        button(type="button" data-direction="plus").counter__btn
          include ../../img/plus.svg