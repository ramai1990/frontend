mixin checkbox(title, items)
  .checkbox
    h3.checkbox__title= title
    each item in items
      - const { id, text, checked } = item;
      if checked
        .checkbox__item
          input.checkbox__input(type="checkbox" id=`checkbox-${id}` checked)
          label.checkbox__label(for=`checkbox-${id}`)= text
      else
        .checkbox__item
          input.checkbox__input(type="checkbox" id=`checkbox-${id}`)
          label.checkbox__label(for=`checkbox-${id}`)= text