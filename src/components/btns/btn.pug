mixin btn({theme, href, text, buttonClass})
  case theme
    when "primary"
      form(action=href)
        button.header-btns__signup(class=buttonClass)= text
    when "border"
      form(action=href)
        .header-btns_border&attributes(attributes)
          button(type="submit" class=buttonClass)= text
    when "arrow"
      form(action=href)
        button.button-elements__default(class=buttonClass)= text
    when "btn-form"
      form(action=href)
        .signin__bottom-btn
          .btn-border
            button(type="submit").btn-border__primary= text
    default
      a(href=href).button-elements__link.link-primary= text