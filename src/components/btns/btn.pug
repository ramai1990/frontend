mixin btn({theme, href, text, buttonClass, width = 196, height = 34, marginLeft = 20, type="submit"})
  case theme
    when "primary"
      form(action=href)
        .button-elements__btn
          button.header-btns__signup(type="submit" style={'max-width': `${width}px`, 'height': `${height}px`, 'margin-left': `${marginLeft}px`})= text
    when "border"
      form(action=href)
        .header-btns_border&attributes(attributes)
          button(type="submit" class=buttonClass)= text
    when "arrow"
      button(type=`${type}`).button-elements__default= text
    when "btn-form"
      .signin__bottom-btn
        .btn-border
          button(type="submit").btn-border__primary= text
    default
      a(href=href).link-primary= text