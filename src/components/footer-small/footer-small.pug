mixin footer-small
  .footer-small
    +logo
    .footer__copy
      .footer-copy
        .footer-copy__container
          p.footer-copy__text Copyright © 2018 Toxin отель. Все права зачищены.
          .footer-copy__socials
            ul.copy-socials
              li.copy-socials__item
                a(href="https://twitter.com/" rel="noreferrer" target="_blank").copy-socials__link
                  include ../../img/tw-small.svg
              li.copy-socials__item
                a(href="https://ru-ru.facebook.com/" rel="noreferrer" target="_blank").copy-socials__link
                  include ../../img/fc-small.svg
              li.copy-socials__item
                a(href="https://www.instagram.com/" rel="noreferrer" target="_blank").copy-socials__link
                  include ../../img/in-small.svg