mixin card(list)
  each item in list
    - const { number, text, price, counter, test, slides, swipperArrowHidden, rating } = item;
    .card
      .swiper-container
        .swiper-wrapper
          each slide in slides
            - const { image } = slide;
            .swiper-slide
              img(src=require(`/img/${image}`).default, alt="")
        .swiper-pagination
        .swiper-button-next(class=swipperArrowHidden)
        .swiper-button-prev(class=swipperArrowHidden)
      .card__title
        a(href="https://ramai1990.github.io/frontend/room").card__title_left
          span.card__title_left-number №
          | #{number}
          span.card__title_left-text= text
        p.card__title_right= price
          span.card__title_right-text в сутки
      .card__reviews
        +rating({ rating })
        p.card__text= counter
          span.card__text_feedback Отзывов