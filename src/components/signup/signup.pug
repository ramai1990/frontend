mixin signUp(items)
  each item in items
    - const { title, date, data, account } = item;
    .signup
      form(action="https://ramai1990.github.io/frontend/sign-in")
        .signup__title= title
        input.signup__input(type="text" placeholder='Имя')
        input.signup__input(type="text" placeholder='Фамилия')
        .signup__gender
          +radio([
            {
              checked: true,
              name: 'gender',
              gender: 'Мужчина'
            },
            {
              name: 'gender',
              gender: 'Женщина'
            }
          ])
        p.signup__text= date
        +imaskBirthday
        p.signup__text= data
        input.signup__input(type="email" placeholder='Email')
        input.signup__input(type="password" placeholder='Пароль')
        +toggle([
          {
            id: 1,
            text: 'Получать спецпредложения'
          }
        ])
        .signup__btn
          +button({
            theme: 'arrow',
            size: 'lg',
            text: 'зарегистрироваться',
            type: 'submit'
          })
        .signup__bottom
          p.signup__bottom-text= account
          +button({
            theme: 'border',
            size: 'sm',
            text: 'Войти',
            type: 'submit'
          })
